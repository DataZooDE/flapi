{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build-debug",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build/debug",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-G",
                "Ninja",
                "&&",
                "cmake",
                "--build",
                "build/Debug",
                "--config",
                "Debug",
                "--target",
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}